@model FoodMartMongo.Dtos.DiscountDtos.CreateDiscountDto

@{
    ViewData["Title"] = "CreateDiscount";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="card">
        <h5 class="card-header">Yeni İndirim Ekleme Sayfası</h5>
        <div class="card-body">
            <form method="post">
                <div class="row">
                    <label>Başlık</label>
                    <div class="col">
                        <input type="text" asp-for="Title" class="form-control" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <label>Alt Başlık</label>
                    <div class="col">
                        <input type="text" asp-for="SubTitle" class="form-control" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <label>Açıklama</label>
                    <div class="col">
                        <input type="text" asp-for="Description" class="form-control" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <label>Görsel Url</label>
                    <div class="col">
                        <input type="text" asp-for="ImageUrl" class="form-control" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col">
                        <button class="btn btn-primary">İndirim Kartı Ekle</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

