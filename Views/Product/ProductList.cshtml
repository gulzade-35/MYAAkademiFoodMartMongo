@model List<FoodMartMongo.Dtos.ProductDtos.ResultProductWithCategoryDto>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <div class="card">
        <h5 class="card-header">Ürün Listesi</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ürün Adı</th>
                        <th>Ürün Stok</th>
                        <th>Ürün Fiyatı</th>
                        <th>Ürün Kategorisi</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody class="table-bordered">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProductId</td>
                            <td>@item.Name</td>
                            <td>@item.StockCount</td>
                            <td>@item.Price</td>
                            <td>@(item.Category != null ? item.Category.CategoryName :"Kategori Yok")</td>
                            <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
                            <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-success">Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a href="/Product/CreateProduct/" class="btn btn-primary">Yeni Ürün Girişi</a>
        </div>
        <br />
    </div>
</div>
